{
  "extends": "./tools/tsconfig.checks.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build/es6",
    "target": "es2016",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": false,
    "importHelpers": true,
    "noEmitHelpers": true,
    "removeComments": false,
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ]
  },
  "include": [
    "packages/**/*.ts"
  ],
}