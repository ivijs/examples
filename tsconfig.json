{
  "compilerOptions": {
    "target": "es2016",
    "module": "es2015",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "build/es6",
    "inlineSourceMap": true,
    "inlineSources": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "removeComments": false,
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "compileOnSave": false
}